PetsTab:CreateDivider()

local StatisticsTab = Window:CreateTab({
    Name = "Statistics",
})

-- Starting counts
local startGems = Player.leaderstats and Player.leaderstats:FindFirstChild("Gems") and Player.leaderstats.Gems.Value or 0
local startWins = Player.leaderstats and Player.leaderstats:FindFirstChild("Wins") and Player.leaderstats.Wins.Value or 0
local startPets = #Player.Pets:GetChildren()

-- Display values
local gemsLabel = StatisticsTab:CreateLabel("Gems: " .. tostring(startGems))
local winsLabel = StatisticsTab:CreateLabel("Wins: " .. tostring(startWins))
local petsLabel = StatisticsTab:CreateLabel("Pets Gained: 0")

-- Update loop
spawn(function()
    while true do
        local currentGems = Player.leaderstats and Player.leaderstats:FindFirstChild("Gems") and Player.leaderstats.Gems.Value or 0
        local currentWins = Player.leaderstats and Player.leaderstats:FindFirstChild("Wins") and Player.leaderstats.Wins.Value or 0
        local currentPets = #Player.Pets:GetChildren()

        gemsLabel:SetText("Gems: " .. tostring(currentGems))
        winsLabel:SetText("Wins: " .. tostring(currentWins))
        petsLabel:SetText("Pets Gained: " .. tostring(currentPets - startPets))

        wait(1)
    end
end)

StatisticsTab:CreateToggle({

})


local SettingsTab = Window:CreateTab({
    Name = "Settings",
})

local AntiAFKEnabled = false

SettingsTab:CreateToggle({
    Name = "Anti AFK",
    Flag = "AntiAFKToggle",
    CurrentValue = false,
    Callback = function(value)
        AntiAFKEnabled = value
        if value then
            spawn(function()
                while AntiAFKEnabled do
                    -- Simulate a user input to prevent AFK kick
                    local vu = game:GetService("VirtualUser")
                    vu:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
                    wait(1)
                    vu:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
                    wait(300) -- every 5 minutes
                end
            end)
        end
    end,
})

SettingsTab:CreateInput({
    Name = "Config Name",
    Flag = "ConfigNameInput",
    Placeholder = "Enter config name here...",
})

SettingsTab:CreateButton({
    Name = "Save Config",
    Callback = function()
        local configName = Window.Flags["ConfigNameInput"]
        if configName and configName ~= "" then
            Window:SaveConfig(configName)
            Luna:Notify({Title = "Config Saved", Content = "Saved config: " .. configName, Duration = 3})
        else
            Luna:Notify({Title = "Error", Content = "Please enter a valid config name", Duration = 3})
        end
    end,
})

SettingsTab:CreateButton({
    Name = "Load Config",
    Callback = function()
        local configName = Window.Flags["ConfigNameInput"]
        if configName and configName ~= "" then
            local success = Window:LoadConfig(configName)
            if success then
                Luna:Notify({Title = "Config Loaded", Content = "Loaded config: " .. configName, Duration = 3})
            else
                Luna:Notify({Title = "Error", Content = "Config not found", Duration = 3})
            end
        else
            Luna:Notify({Title = "Error", Content = "Please enter a valid config name", Duration = 3})
        end
    end,
})

SettingsTab:CreateButton({
    Name = "Delete Config",
    Callback = function()
        local configName = Window.Flags["ConfigNameInput"]
        if configName and configName ~= "" then
            Window:DeleteConfig(configName)
            Luna:Notify({Title = "Config Deleted", Content = "Deleted config: " .. configName, Duration = 3})
        else
            Luna:Notify({Title = "Error", Content = "Please enter a valid config name", Duration = 3})
        end
    end,
})


local Lighting = game:GetService("Lighting")
local StarterGui = game:GetService("StarterGui")
local Terrain = workspace:FindFirstChildOfClass("Terrain")

local originalSettings = {
    LightingTechnology = Lighting.Technology,
    FogEnd = Lighting.FogEnd,
    Brightness = Lighting.Brightness,
    GlobalShadows = Lighting.GlobalShadows,
    TerrainDecorations = Terrain and Terrain.Decorations,
}

local FPSBoosterEnabled = false

SettingsTab:CreateToggle({
    Name = "FPS Booster (Low Graphics Mode)",
    Flag = "FPSBoosterToggle",
    CurrentValue = false,
    Callback = function(value)
        FPSBoosterEnabled = value
        if value then
            -- Enable low graphics
            Lighting.Technology = Enum.Technology.Compatibility
            Lighting.FogEnd = 100
            Lighting.Brightness = 1
            Lighting.GlobalShadows = false
            if Terrain then
                Terrain.Decorations = false
            end
            -- Remove particle emitters, textures, etc.
            for _, obj in ipairs(workspace:GetDescendants()) do
                if obj:IsA("ParticleEmitter") or obj:IsA("Trail") or obj:IsA("Smoke") or obj:IsA("Fire") then
                    obj.Enabled = false
                elseif obj:IsA("Decal") or obj:IsA("Texture") then
                    obj.Transparency = 1
                end
            end
        else
            -- Restore original settings
            Lighting.Technology = originalSettings.LightingTechnology
            Lighting.FogEnd = originalSettings.FogEnd
            Lighting.Brightness = originalSettings.Brightness
            Lighting.GlobalShadows = originalSettings.GlobalShadows
            if Terrain then
                Terrain.Decorations = originalSettings.TerrainDecorations
            end
            -- Re-enable particles, textures, etc.
            for _, obj in ipairs(workspace:GetDescendants()) do
                if obj:IsA("ParticleEmitter") or obj:IsA("Trail") or obj:IsA("Smoke") or obj:IsA("Fire") then
                    obj.Enabled = true
                elseif obj:IsA("Decal") or obj:IsA("Texture") then
                    obj.Transparency = 0
                end
            end
        end
    end,
})


-- Finalize UI
Window:Ready()
